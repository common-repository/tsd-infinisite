<div class='is-page-builder-wrapper' data-editor-style>

    <div class="grid-container">
        <div class="grid-x">

            <div class="cell">
                {{ top_sidebar_html | raw }}
            </div>

            <div class="cell shrink">
                {{ left_sidebar_html | raw }}
            </div>


            <div class='cell'>
                <div class='grid-x align-center gray_xxlight-background'>

                    <div class='cell small-12 medium-10'>


                        <div class="grid-x align-middle">

                            {% if fields.image %}
                                <div class="cell shrink">
                                    <img src="{{ fields.image.sizes.medium }}" alt="">
                                </div>
                            {% endif %}

                            <div class="cell auto">
                                <div class="spacer small"></div>
                                <h3>{{ post.post_title }}</h3>
                                <p><strong>Publication Date: </strong> {{ fields.start_date | date("F j, Y") }}</p>
                                <a href="/for-the-media/press-releases-statements/" class="secondary-text">Back To
                                    Archive</a>
                                <div class="spacer small"></div>
                            </div>
                        </div>

                    </div>

                </div>

                <div class="grid-x align-center">
                    <div class="cell small-12 medium-10">


                        <div class="cell">
                            <div class="spacer"></div>
                            {{ fields.content | raw }}
                            <div class="spacer xlarge"></div>
                        </div>
                    </div>


                </div>
            </div>


            <div class="cell shrink">
                {{ right_sidebar_html | raw }}
            </div>

            <div class="cell">
                {{ bottom_sidebar_html | raw }}
            </div>
        </div>
    </div>
</div>
