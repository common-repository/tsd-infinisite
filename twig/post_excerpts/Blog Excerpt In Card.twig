<div class="cell">
    <div class="card primary">

        <div class="card-divider">
            <a href="{{ permalink }}" style="text-decoration: none;">
                <h4>
                    {{ post.post_title }}
                </h4>
            </a>
        </div>

        <div class="card-section">

            {% if post.post_date %}
                <h6>{{ post.post_date | date("F jS, Y") }}</h6>
            {% endif %}

            {% if fields.author_post %}
                <p>Post By: {{ fields.author_post.0.post_title }}</p>
            {% endif %}

            {% if fields.excerpt %}
                {{ fields.excerpt | raw }}
            {% endif %}

            <hr>

            {% if permalink %}
                <a href="{{ permalink }}" class="arrow_link">Read More </a>
            {% endif %}
        </div>
    </div>
</div>
